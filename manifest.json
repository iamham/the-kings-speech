{
  "manifest_version": 2,

  "name": "The King's Speech",
  "icons": { 
    "16": "icon.jpg",
    "48": "icon.jpg",
   "128": "icon.jpg" },
  "description": "Get quotes of King Bhumibol Adulyadej daily.",
  "version": "1.0",
  "author": "Sarun Peetasai",
  "chrome_url_overrides" : {
    "newtab": "index.html"
  },
  "content_security_policy": "script-src 'self' https://cdn.firebase.com https://*.firebaseio.com; object-src 'self'",
  "permissions": [
    "activeTab",
    "storage",
    "topSites"
  ]
}
